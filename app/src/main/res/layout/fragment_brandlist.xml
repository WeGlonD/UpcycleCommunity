<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/FilterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/filter_background"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:clipToOutline="true"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/FilterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/FilterTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="검색/필터"
                android:textSize="30dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <EditText
                android:id="@+id/search_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:hint="검색할 브랜드명"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:scrollbarSize="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/filter_clothes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_filter"
                        android:text="의류"
                        android:layout_margin="5dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/filter_accessary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_filter"
                        android:text="액세서리"
                        android:layout_margin="5dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/filter_interior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_filter"
                        android:text="인테리어"
                        android:layout_margin="5dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/filter_fashionStuff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_filter"
                        android:text="패션잡화"
                        android:layout_margin="5dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/filter_etc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_filter"
                        android:text="기타"
                        android:layout_margin="5dp"/>
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색"/>
            </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/BrandRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/FilterContainer"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>